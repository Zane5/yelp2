%article.business_category.container
  %header
    - @categories.each do |category|
      %br
      %h2 #{category.name}
      .video.row
        - category.recent_businesses.each do |business|
          .video.col-sm-2
            =link_to business do
              %h3= link_to business.name, business_path(business)
              =image_tag business.picture_url
