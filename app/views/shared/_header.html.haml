%section#top-header.row
  %h1.col-md-2
    = link_to "Yelp"
  - if current_user
    %ul.col-md-4.clearfix
      %li= link_to "Business", businesses_path
      %li= link_to "My Review", user_path(current_user.id)
    = form_tag class: "span5 for-search", method: 'get' do
      %input.search-query(name="search_term" type="text" placeholder="Search for Bussiness  here")
      %button.btn.btn-default(type="submit") Search
    #user_links.pull-right
      %ul
        %li.dropdown
          %a(href="#" id="dlabel" role="button" data-toggle="dropdown" class="dropdown-toggle" data-target="#")
            Welcome, #{current_user.username}
            %b.caret
          %ul.dropdown-menu(role="menu" aria-labelledby="dlabel")
            %li= link_to "My Profile", user_path(current_user.id) 
            %li.divider(role="separator")
            %li= link_to "Sign Out", sign_out_path 
  - else
    %ul.col-md-4.clearfix.pull-right
      %li= link_to "Sign in", sign_in_path
      %li= link_to "Reginster", register_path
